extends pug/base

append vars
    - title = 'Карточка товара попап корзина'
    - meta.description = 'Описание страницы'
    - meta.viewport = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'
    - link.icon = './favicon.ico'
    - meta.formatDetection = 'telephone=no'
    - meta.themeColor = '#FFCC00'
    - defaultLink = 'javascript:void(0);'
    - body.classList = ['inner-page']

block content
    include pages/innerheader
    .content
        .navigation
            .container
                .crumbs
                    <ul class="breadcrumbs">
                        <li>
                            <a href="/">Главная</a>
                        </li>
                        <li>
                            <a href="/">Каталог продукции</a>
                        </li>
                        <li>
                            <a href="/">Для дома и офиса</a>
                        </li>
                        <li>
                            <span>AK-UFO 20W</span>
                        </li>
                    </ul>
        .page-title
            .container
                h3
                    | AK-UFO 20W
        .header-article.container
            | Артикул: # 123456789
        .header-price.container
            | Цена:&nbsp;<strike>11 500</strike>&nbsp;10 500 сум 
        .category-card
            .container
                .category-card-wrapper
                    .category_filter-wrap
                        .category-card-filter
                            .category-card-nav.category-filter-nav.open.dotted
                                .category-filter-nav__title
                                    | Для дома и офиса
                                ul
                                    li
                                        a(href="#")
